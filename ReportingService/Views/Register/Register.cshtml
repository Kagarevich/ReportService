@model ReportingService.ViewModels.RegisterModel;
@{
    ViewData["Title"] = "Регистрация";
}
<div class="container">
    <div class="frame">
        <div class="nav">
            <ul class="links">
                <li class="signin-inactive"><a class="btn" asp-action="Login" asp-controller="Login">Вход</a></li>
                <li class="signup-active"><a class="btn">Регистрация</a></li>
            </ul>
        </div>
        <div ng-app ng-init="checked = false">
            <form class="form-signin" asp-action="Register" asp-controller="Register" asp-anti-forgery="true">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Login" class="control-label">Логин</label>
                    <input asp-for="Login" class="form-control form-styling" />
                    <span asp-validation-for="Login" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Email" class="control-label">Почта</label>
                    <input asp-for="Email" class="form-control form-styling" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="control-label">Пароль</label>
                    <input asp-for="Password" class="form-control form-styling" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ConfirmPassword" class="control-label">Повторите пароль</label>
                    <input asp-for="ConfirmPassword" class="form-control form-styling" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Создать" class="btn btn-primary btn-signup" />
                </div>
            </form>
        </div>
        </div>
    </div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
